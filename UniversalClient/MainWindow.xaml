<Window x:Class="UniversalClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UniversalClient"
        mc:Ignorable="d"
        Title="Client" Height="350" Width="525">
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" 
                Command="{Binding SendMessageCommand}"
                Margin="208,137,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="{Binding Status}"
               HorizontalAlignment="Left" Margin="181,59,0,0"
               VerticalAlignment="Top" Height="15" Width="61"/>
        <TextBox HorizontalAlignment="Left" Height="23"
                 Margin="181,59,0,0" TextWrapping="Wrap" 
                 Text="{Binding IPAddressServer}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
